<?xml version="1.0"?>
<odoo>
    <data>
        <report
            id="tiposervicio_report"
            model="upobarber.tiposervicio"
            string="Tipo de Servicio Report"
            report_type="qweb-pdf"
            name="upobarber.tiposervicio_report"
            file="upobarber.tiposervicio_report"
        />

        <template id="upobarber_tiposervicio_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Tipos de Servicio</h2>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Descripci√≥n</th>
                                    <th>Precio</th>
                                    <th>Tiempo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="docs" t-as="record">
                                    <td><t t-esc="record.tipo_servicio"/></td>
                                    <td><t t-esc="record.descripcion"/></td>
                                    <td><t t-esc="record.precio"/></td>
                                    <td><t t-esc="record.tiempo"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
